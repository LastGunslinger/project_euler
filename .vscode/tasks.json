{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"isShellCommand":true,
	"showOutput": "always",
	"echoCommand": true,
	"suppressTaskName": true,
	"windows": {
		"command": "cmd",
		"args": ["-c"]
	},
	"osx": {
		"command": "bash",
		"args": ["-c"]
	},
	
	"tasks": [
		{
			"taskName": "Run Main",
			"args": ["source ~/.bash_profile && workon ${workspaceRootFolderName} && python ${file}"],
			"problemMatcher": []
		},
		{
			"taskName": "Build",
			"suppressTaskName": true,
			"args": ["source ~/.bash_profile && workon ${workspaceRootFolderName} && python build.py"],
			"problemMatcher": []
		},
		{
			"taskName": "Deploy",
			"suppressTaskName": true,
			"args": ["source ~/.bash_profile && workon ${workspaceRootFolderName} && python deploy.py"],
			"problemMatcher": []
		},
		{
			"taskName": "Test",
			"isTestCommand": true,
			"suppressTaskName": true,
			"args": ["poetry run pytest -s -vvv ${file}"],
			"problemMatcher": []
		}
	]
}